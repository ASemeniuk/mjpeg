<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_activated="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/holo_blue_dark"/>
        </shape>
    </item>
    <item android:state_pressed="true" android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/holo_blue_light"/>
        </shape>
    </item>
    <item android:state_pressed="false" android:state_activated="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/secondary_text_light"/>
        </shape>
    </item>
    <item android:state_pressed="false" android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/background_dark"/>
        </shape>
    </item>
</selector>